                                    <%=file.fileName%>:
                                    <% if(file.accessible){ %>
                                    <span>THIS FILE IS ACCESSIBLE FOR HEALTHCARE PROVIDERS</span>
                                    <% }else{ %>
                                    <span>THIS FILE IS ACCESSIBLE ONLY UPON AUTHORIZATION</span>
                                    <% } %>
                                </h5>
                                <p class="card-text"><%= file.note %></p>
                            </div>
                            <!-- TODO: ALIGN DELETE BUTTON TO BOTTOM RIGHT CORNER -->
