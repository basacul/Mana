<% include partials/header %>

<div class="card-body">
	<form method='POST' action='/reset'>
		<div class="input-group form-group">
			<div class="input-group-prepend">
				<span class="input-group-text"><span class="glyphicon glyphicon-user"></span></span>
			</div>
			<input type="text" name="username" class="form-control" placeholder="current username" required>
		</div>
		<div class="input-group form-group">
			<div class="input-group-prepend">
				<span class="input-group-text"><span class="glyphicon glyphicon-pencil"></span></span>
			</div>
			<input type="password" name="password" class="form-control" placeholder="new password" required>
		</div>
		<div class="input-group form-group">
			<div class="input-group-prepend">
				<span class="input-group-text"><span class="glyphicon glyphicon-pencil"></span></span>
			</div>
			<input type="password" name="passwordConfirmation" class="form-control" placeholder="confirm password" required>
		</div>
		<div class="input-group form-group">
			<div class="input-group-prepend">
				<span class="input-group-text"><span class="glyphicon glyphicon-lock"></span></span>
			</div>
			<input type="text" name="token" class="form-control" placeholder="verification token" required>
		</div>


		<div class="row d-flex justify-content-around">
			<div class="form-group">
				<input type="submit" value="Reset" class="btn btn_own_style">
			</div>
			<div class="form-group">
				<a class="btn btn_own_style" href='/'>Cancel</a>
			</div>
		</div>
	</form>
</div>

<% include partials/footer %>