</header>
<!-- The Modal -->
<div class="modal" id="myModal">
    <div class="modal-dialog">
        <div class="modal-content">
            <form action="/private" method="POST" enctype="multipart/form-data">
                <!-- Modal Header -->
                <div class="modal-header">
                    <h4 class="modal-title">Upload New File</h4>
                </div>

                <!-- Modal body -->
                <div class="modal-body">


                    <div class="form-group">
                        <label for="f-filename">File Name</label>
                        <input type="text" class="form-control" name="file[fileName]" id="f-filename"
                            placeholder="Enter file name">
                    </div>

                    <div class="form-group custom-file">
                        <input class="custom-file-input" type="file" name="upload" id="f-file">
                        <label class="custom-file-label" for=f-file>Choose File</label>
                    </div>
                    <div class="form-group">
                        <label for="f-note">Notes</label>
                        <textarea class="form-control" name="file[note]" id="f-note" rows="3"></textarea>
                    </div>
                    <div class="form-check">
                        <input class="form-check-input" type="checkbox" name="file[shared]" value="true" id="f-shared">
                        <label class="form-check-label" for="f-shared">
                            Shared
                        </label>
                    </div>
                    <!-- 
                    <div class="form-group">
                            <label for="f-shared">File</label>
                            <input type="text" class="form-control" name="file[shared]" id="f-shred"
                                placeholder="replace with type FILE">
                        </div> -->

                </div>

                <!-- Modal footer -->
                <div class="modal-footer">
                    <button type="submit" class="btn btn-primary">Submit</button>
                    <button type="button" class="btn btn-danger" data-dismiss="modal">Cancel</button>
                </div>
            </form>
        </div>
    </div>
</div>
<article>
    <div class="container">
        <h1>This section stores data not shared on the ethereum network and for personal purposes yet</h1>
        <% if (files.length > 0) { %>
        <div class="card text-white bg-dark mt-3">
            <div class="card-header d-flex justify-content-between" style="background-color: black">
                <span>FILENAME</span> <span>SHARED</span> <span>DATE</span>
            </div>
            <ul class="list-group list-group-flush">
                <% files.forEach(function(file){ %>
                <a href="/private/<%=file._id%>">
                    <li class="list-group-item d-flex justify-content-between bg-dark">

                        <span><%=file.fileName%></span> <span><%=file.shared%></span>
                        <span><%=file.date.toDateString() %></span>

                    </li>
                </a>
                <% }) %>

            </ul>
        </div>
        <% } %>
    </div>
</article>

<% include partials/footer %>

