</header>
<!-- The Modal -->
<div class="modal" id="myModal">
    <div class="modal-dialog">
        <div class="modal-content">
            <form action="/private/<%=file._id%>?_method=PUT" method="POST">
                <!-- Modal Header -->
                <div class="modal-header">
                    <h4 class="modal-title">Edit File</h4>

                </div>

                <!-- Modal body -->
                <div class="modal-body">

                    <div class="form-group">
                        <label for="f-filename">File Name</label>
                        <input type="text" class="form-control" name="file[fileName]" id="f-filename"
                            value="<%=file.fileName%>">

                    </div>
                    <div class="form-group">
                        <label for="f-file">File</label>
                        <!-- TODO: IMPLEMENT UPLOAD FOR THIS FILE AND UPDATE MONGODB & APP.JS -->
                        <input type="text" class="form-control" name="file[file]" id="f-file" value="<%=file.file%>"
                            readonly>
                    </div>
                    <div class="form-group">
                        <label for="f-note">File</label>
                        <textarea class="form-control" name="file[note]" id="f-note" rows="3"><%=file.note%></textarea>
                    </div>
                    <div class="form-check">
                        <% if(file.shared){ %>
                        <input class="form-check-input" type="checkbox" name="file[shared]" value="true" id="f-shared"
                            checked>
                        <% }else{ %>
                        <input class="form-check-input" type="checkbox" name="file[shared]" value="true" id="f-shared">
                        <% } %>
                        <label class="form-check-label" for="f-shared">
                            Shared
                        </label>
                    </div>
                    <!-- 
                    <div class="form-group">
                            <label for="f-shared">File</label>
                            <input type="text" class="form-control" name="file[shared]" id="f-shred"
                                placeholder="replace with type FILE">
                        </div> -->

                </div>

                <!-- Modal footer -->
                <div class="modal-footer">
                    <button type="submit" class="btn btn-primary">Update</button>
                    <button type="button" class="btn btn-danger" data-dismiss="modal">Cancel</button>
                </div>
            </form>
        </div>
    </div>
</div>
<article>
    <div class="container">
        <div class="row">
            <div class="col-12">
                <div class="card mt-3 bg-dark text-white border-secondary">
                    <h5 class="card-header d-flex justify-content-between" style="background: black">
                        <!-- TODO: IMPLEMENT DOWNLOAD FOR THIS FILE -->
                        <span><a href="#"><%=file.fileName%></a></span>
                        <span><a href="/private">GO BACK</a></span>
                    </h5>
                    <div class="card-body">
                        <div class="row d-flex justify-content-around">
                            <div>
                                <h5 class="card-title">
                                    <%=file.fileName%>:
                                    <% if(file.shared){ %>
                                    <span>THIS FILE IS AVAILABLE ON ETHEREUM</span>
                                    <% }else{ %>
                                    <span>THIS FILE IS KEPT PRIVATE</span>
                                    <% } %>
                                </h5>
                                <p class="card-text"><%= file.note %></p>
                            </div>
                            <!-- TODO: ALIGN DELETE BUTTON TO BOTTOM RIGHT CORNER -->
                            <div>
                                <form action="/private/<%= file._id %>?_method=DELETE" method="POST">
                                    <input type="submit" class="btn btn-danger" value="Delete File">
                                </form>
                            </div>
                        </div>




                    </div>
                </div>
            </div>
        </div>
    </div>
</article>
